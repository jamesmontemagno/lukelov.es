include ./_date.jade
doctype html
html
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    title lukelov.es
    meta(name='viewport', content='width=device-width')
    link(rel='stylesheet', href='/css/main.css')
  body
    .container
      .site
        .header
          h1.title
            a(href='/') lukelov.es
          a.extra(href='/') home

        main
          - if (current.path[0] === 'articles')
            - if (public.articles._data[current_source])
              h2= public.articles._data[current.source].title
              p.meta= displayDate(public.articles._data[current.source].date)
              .post
                != yield
          - else
            != yield

        .footer
          .contact
            p
              | I'm 
              a(href='http://lukekarrys.com') Luke
              | .
              br
              | I live in Arizona but I'm from the Internet.

    script(async='', src='//platform.twitter.com/widgets.js', charset='utf-8')
